@model BuildingStore.Models.Entity.Product

<br /><br />
<div class="row">
    <div class="col-sm-6">
        <img src="~/images/@Model.Image" class="img-thumbnail" style="width: 100%; height: 100%">
    </div>
    <div class="col-sm-6">
        <h3 class="text-center" style="font-size:35px"> @Model.Name</h3><br />
        <p style="font-size:25px;">Category: <strong>@Model.Category.Name</strong></p>
        <br />
        <p>@Model.Description</p>
        <p></p>
        <hr>
        <p style="font-size:25px;">Price: <strong>@Model.Price $</strong></p>

        <p><a asp-action="ViewOrderItems" asp-controller="OrderItem" asp-route-userID="@ViewData["UserID"]" asp-route-email="@ViewData["UserEmail"]" class="btn btn-danger">Add to cart</a></p>
        <p><a asp-action="ViewCatalog" asp-controller="Product" asp-route-userID="@ViewData["UserID"]" asp-route-userEmail="@ViewData["UserEmail"]" class="btn btn-danger">Back to catalog</a></p>
    </div>
</div>
    
    

