@model BuildingStore.ViewModels.RegisterModel


<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div><br /><br /><br /><br /><br />
    <div class="card text-center w-50 mx-auto" style="width: 40rem;">
        <div class="card-body">
            <h2 class="card-title">REGISTRATION</h2><br />
            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-4 col-form-label">Email</label><br />
                <div class="col-sm-6">
                    <input type="text" asp-for="Email" />
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Password" class="col-sm-4 col-form-label">Password</label><br />
                <div class="col-sm-6">
                    <input asp-for="Password" />
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label">Confirm password</label><br />
                <div class="col-sm-6">
                    <input asp-for="ConfirmPassword" />
                </div>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

