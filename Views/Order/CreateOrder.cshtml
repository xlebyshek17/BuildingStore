@model BuildingStore.Models.Entity.Order
@inject BuildingStore.Models.Repositories.IRepository<User> users

@{
    ViewData["Title"] = "Pre-order";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">pre-order</h3>
    </div>
    <div class="card-body">
        <form asp-action="CreateOrder" asp-controller="Order">
            @{ var u = users.Get((int)ViewData["UserID"]);}
            <input type="hidden" asp-for="User.ID" value="@u.ID" />
            <input type="hidden" asp-for="User.RoleID" value="@u.RoleID" />
            <input type="hidden" asp-for="User.Email" value="@u.Email" />
            <input type="hidden" asp-for="User.Password" value="@u.Password" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input type="text" asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input type="text" asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input type="text" asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <a asp-controller="OrderItem" asp-action="ViewOrderItems" asp-route-userID="@ViewData["UserID"]" asp-route-email="@ViewData["UserEmail"]" class="btn btn-outline-info">Back to cart</a>
                <input type="submit" value="Continue" asp-route-userID="@ViewData["UserID"]" asp-route-email="@ViewData["UserEmail"]" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>
