@model BuildingStore.Models.Entity.Category

@{
    ViewData["Title"] = "New Category";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">new category</h3>
    </div>
    <div class="card-body">
        <form asp-action="CreateCategory" asp-controller="Category">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-info" />
                <a class="btn btn-outline-info" role="button" asp-controller="Category" asp-action="ViewCategory">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section scripts{

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
