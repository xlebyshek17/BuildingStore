@model BuildingStore.Models.Entity.Category
@{
    ViewData["Title"] = "Edit category";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Edit category</h3>
    </div>
    <div class="card-body">
        <form asp-action="EditCategory" asp-controller="Category">
            <div class="form-group row">
                <label asp-for="ID" class="col-sm-2 col-form-label">ID</label>
                <input type="text" readonly class="form-control" asp-for="ID">
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-success" />
                <a class="btn btn-outline-info" role="button" asp-controller="Category" asp-action="ViewCategory">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}